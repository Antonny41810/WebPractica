@model UserRole
@{ ViewData["Title"] = "AddUserToRole"; }

<div class="wrapper text-dark">
    <div class="content-wrapper bg-white d-flex justify-content-center align-items-center">
        <div class="card card-primary shadow" style="width:20rem">
            <div class="container">
                <div class="row">
                    <div class="mx-auto">
                        <div class="col-lg-12">
                            <h1 class="text-center">Agregar rol a usuario</h1>
                            <hr />
                            <form asp-action="AddUserToRole" method="post">
                                <div class="form-group">
                                    <label style="color:green">Usuario</label>
                                    <select asp-for="UserId" asp-items="@ViewBag.Users"
                                            class="form-control">
                                        <option selected disabled>
                                            Seleccione un
                                            usuario
                                        </option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label style="color:green">Rol</label>
                                    <select asp-for="RoleName" asp-items="@ViewBag.Roles"
                                            class="form-control">
                                        <option selected disabled>Seleccione un Rol</option>
                                    </select>
                                </div>
                                <center>
                                    <input type="submit" class="btn btn-primary "
                                           value="Asignar" />
                                    <a asp-action="Index" class="btn btn-danger">
                                        Cancelar
                                    </a>
                                </center>
                                
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
