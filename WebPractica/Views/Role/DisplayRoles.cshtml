@model List<Microsoft.AspNetCore.Identity.IdentityRole>
    <div class="wrapper text-dark">

        <div class="content-wrapper bg-white d-flex justify-content-center align-items-center">
            <div class="card card-primary shadow" style="width:20rem">
                <div class="container">
                    <div class="row">
                        <div class="mx-auto">
                            <div class="col-lg-12">
                                <div class="card-header text-dark"><center><h3>Roles</h3></center></div>                               
                                <a asp-action="Create" asp-controller="Role" class="btn btn-primary m-3">Nuevo</a>
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>
                                                Nombre
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr class="text-dark">
                                                <td class="text-dark">
                                                    @Html.DisplayFor(modelItem => item.Name)
                                                </td>
                                                <td>
                                                    <a class="btn btn-danger btn-sm" asp-route-role="@item.Name" asp-action="RemoveRole" onclick="return confirm('¿Está seguro de eliminar este Rol?')">Eliminar</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
