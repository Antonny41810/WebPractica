@model Microsoft.AspNetCore.Identity.IdentityRole
@{ ViewData["Title"] = "Roles"; }

<div class="wrapper text-dark">

    <div class="content-wrapper bg-white d-flex justify-content-center align-items-center">
        <div class="card card-primary shadow" style="width:20rem">

            <div class="mx-auto">
                <div class="col-lg-12">
                    <h1>Crear un Rol</h1>
                    <hr />
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="textdanger">
                        </div>
                        <div class="form-group">
                            <label class="control-label">Nombre</label>
                            <input type="text" id="role" name="role" asp-for="Name"
                                   class="form-control" placeholder="Entre el nombre del rol" />
                            <span asp-validation-for="Name" class="textdanger">
                            </span>
                        </div>
                        <center>
                            <div class="form-group ">
                                <input type="submit" value=" Crear " class="btn btn-primary" />
                                <a class="btn btn-danger" asp-action="DisplayRoles">Cancelar</a>
                            </div>
                        </center>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
