@model LoginUsuarios
@{
    ViewData["Title"] = "Acceso de usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wrapper" style="font-family: Bradley Hand, cursive">
    <center>
        <div class="content-wrapper bg-white d-flex justify-content-center align-items-center">
            <div class="col-md-3">
                <div class="card card-primary card-outline shadow">
                    <div class="card-header text-dark"><center><h3>Bienvenido-Inicio de Sesión</h3></center></div>
                    <div class="card-body">
                        <form asp-controller="Cuentas" asp-action="Acceso" method="post">
                            <div class="input-group mb-3">
                                <input asp-for="Email" class="form-control" placeholder="Correo" />
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="bi bi-envelope"></span>
                                    </div>
                                </div>
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <div class="input-group mb-3">
                                <input asp-for="Password" class="form-control" placeholder="Contraseña" />
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="bi bi-key"></span>
                                    </div>
                                </div>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <div class="mb-3">
                                <div class="custom-check text-dark">
                                    <label asp-for="Rememberme">
                                        <input asp-for="Rememberme" />
                                        @Html.DisplayNameFor(m => m.Rememberme)
                                    </label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <center>
                                        <button type="submit" class="btn btn-success w-30 btn-lg">Ingresar  <i class="bi bi-arrow-right-circle-fill"></i></button>
                                        <p><a asp-action="Registro" class="m-3"> Registrarse como un nuevo usuario </a></p>
                                        <p><a asp-action="OlvidoPassword" class="m-3">¿Olvidaste tu contraseña?</a></p>
                                    </center>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </center>
</div>
@section Scripts{ 
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}







