@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SigInManager
@inject UserManager<IdentityUser> UserManager


<ul class="navbar-nav ml-auto float-right" style="font-family: Bradley Hand, cursive">
    @if (SigInManager.IsSignedIn(User))
    {
        <li class="nav-item m-2">
            <a class="nav.link text-light" href="">Bienvenido, @UserManager.GetUserName(User)</a>
        </li>

        <li class="nav-item">
            <form id="Logoutform" method="post" class="form-check-inline" asp-controller="Cuentas" asp-action="SalirAplicacion">
                <button type="submit" class="btn nav-link btn-danger text-light mr-n3">Salir</button>
            </form>
        </li>
    }
    else
    {
       
        <li class="nav-item">
            <a class="nav-link btn-dark m-1 text-light" asp-area="" asp-controller="Cuentas" asp-action="Registro">Registrarse</a>
        </li>
        <li class="nav-item">
            <a class="nav-link btn-dark m-1 text-light" asp-area="" asp-controller="Cuentas" asp-action="Acceso">Ingresar</a>
        </li>
        
    }
</ul>


