@model WebPractica.Models.Registro

@{
    ViewData["Title"] = "Details";
}

<div class="wrapper">
    <div class="content-wrapper text-dark bg-white d-flex justify-content-center align-items-center">
        <div class="card shadow" style="width:50rem">

            <center><h1 style="color:blue; font-family: Bradley Hand, cursive">Detalle De Usuario</h1></center>

            <center>
                <div style="font-family: Bradley Hand, cursive">
                    <center><h4>Registros</h4></center>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.Imagen)


                        </dt>
                        <dd class="col-sm-6">
                            @if (Model.Imagen != null)
                            {
                                var base64 = Convert.ToBase64String(Model.Imagen);
                                var imgScr = String.Format("data:image/jpg;base64,{0}", base64);<img id="mostrarfoto" src='@imgScr' style="max-width: 150px; max-height: 150px;" class="img-circle elevation-2" />

                            }
                        </dd>
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.Documento)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Documento)
                        </dd>
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.Nombre)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.Apellidos)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Apellidos)
                        </dd>
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.FechaNac)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.FechaNac)
                        </dd>
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.Direccion)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Direccion)
                        </dd>
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.Celular)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Celular)
                        </dd>
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.Genero)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Genero)
                        </dd>
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.Deporte)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Deporte)
                        </dd>
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.Trabaja)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Trabaja)
                        </dd>
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.Sueldo)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Sueldo)
                        </dd>
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.Estado)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Estado)
                        </dd>
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.FechaReg)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.FechaReg)
                        </dd>
                    </dl>
                </div>
                <div>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.IdRegistro">Editar</a>
                    <a asp-action="Index" class="btn btn-danger">Regresar</a>

                </div>
            </center>
        </div>
    </div>
</div>
